<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>MenuController</servlet-name>
        <servlet-class>com.store.presn.controllers.MenuController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OperationsController</servlet-name>
        <servlet-class>com.store.presn.controllers.OperationsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SalesOperationController</servlet-name>
        <servlet-class>com.store.presn.controllers.SalesOperationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PurchasesOperationsController</servlet-name>
        <servlet-class>com.store.presn.controllers.PurchasesOperationsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SettingOperationsController</servlet-name>
        <servlet-class>com.store.presn.controllers.SettingOperationsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DiscountOperationsController</servlet-name>
        <servlet-class>com.store.presn.controllers.DiscountOperationsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchOperationsController</servlet-name>
        <servlet-class>com.store.presn.controllers.SearchOperationsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReportsOperationsController</servlet-name>
        <servlet-class>com.store.presn.controllers.ReportsOperationsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CustomerOperationsController</servlet-name>
        <servlet-class>com.store.presn.controllers.CustomerOperationsController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MenuController</servlet-name>
        <url-pattern>/MenuController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OperationsController</servlet-name>
        <url-pattern>/OperationsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SalesOperationController</servlet-name>
        <url-pattern>/SalesOperationController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PurchasesOperationsController</servlet-name>
        <url-pattern>/PurchasesOperationsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SettingOperationsController</servlet-name>
        <url-pattern>/SettingOperationsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DiscountOperationsController</servlet-name>
        <url-pattern>/DiscountOperationsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchOperationsController</servlet-name>
        <url-pattern>/SearchOperationsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReportsOperationsController</servlet-name>
        <url-pattern>/ReportsOperationsController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CustomerOperationsController</servlet-name>
        <url-pattern>/CustomerOperationsController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
